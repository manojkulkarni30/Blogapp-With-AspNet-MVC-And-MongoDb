@model HandleErrorInfo
@{
    ViewBag.Title = "Error";
}
@if (String.IsNullOrWhiteSpace(ViewBag.errorMessage))
{
    <div class="jumbotron">
        <h1>Error</h1>
        <p>An error occurred while processing your request.</p>
        <p><a class="btn btn-primary btn-lg" href="@Url.Action("Index","Home")">Go To Home</a></p>
    </div>
}
else
{
    <div class="jumbotron">
        <h1>Information</h1>
        <p>@ViewBag.errorMessage</p>
        <p><a class="btn btn-primary btn-lg" href="@Url.Action("Index","Home")">Go To Home</a></p>
    </div>
}